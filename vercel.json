{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "functions": {
    "api/menu.js": {
      "maxDuration": 10
    },
    "api/menu/[hotelName].js": {
      "maxDuration": 10
    },
    "api/hotels.js": {
      "maxDuration": 10
    },
    "api/hotel-info/[hotelName].js": {
      "maxDuration": 10
    }
  }
} 